<%- include('../partials/header.ejs') %>

<div class="container">
	<div class="row justify-content-center">
		<div class="col-6">
			<div class="container text-center">
				<h3 class="mb-4">Edit <%= camp.name %></h3>
				<div class="col-8 m-auto">
					<form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
						<div class="form-group">
							<input class="form-control" type="text" name="campground[name]" value="<%= camp.name %>">
						</div>
						<div class="form-group">
							<input class="form-control" type="number" name="campground[price]" value="<%= camp.price %>" min="0.01" step="0.01">
						</div>
						<div class="form-group">
							<input class="form-control" type="text" name="campground[image]" value="<%= camp.image %>">
						</div>
						<div class="form-group">
							<input class="form-control" type="text" name="campground[description]" value="<%= camp.description %>">
						</div>
						<div class="form-group">
							<button class="btn btn-lg btn-primary btn-block">Save</button>
						</div>
					</form>
					<a class="float-left" href="/campgrounds">Go back</a>
				</div>
			</div>
		</div>
	</div>
</div>



<%- include('../partials/footer.ejs') %>