<%- include('../partials/header.ejs') %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world.</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new"
                    >Add New Campground</a
                >
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
    </div>

    <div class="row">
        <% campgrounds.forEach(camp => { %>
        <div class="col-md-3 col-sm-6">
            <div class="card mb-3">
                <img class="card-img-top" src="<%= camp.image %>" />
                <div class="card-body text-center">
                    <h5 class="card-title"><%= camp.name %></h5>
                    <div class="rating py-2">
                        <% if (camp.rating === 0) { %>
                        <em>No reviews yet.</em>
                        <% } else { %>
                        <span class="fa fa-star yellow-star"></span>
                        <span
                            class="fa fa-star<% if (camp.rating < 1.5) { %>-o <% } else { %> yellow-star<% } %>"
                        ></span>
                        <span
                            class="fa fa-star<% if (camp.rating < 2.5) { %>-o <% } else { %> yellow-star<% } %>"
                        ></span>
                        <span
                            class="fa fa-star<% if (camp.rating < 3.5) { %>-o <% } else { %> yellow-star<% } %>"
                        ></span>
                        <span
                            class="fa fa-star<% if (camp.rating < 4.5) { %>-o <% } else { %> yellow-star<% } %>"
                        ></span>
                        <% } %>
                    </div>
                    <a
                        class="btn btn-primary"
                        href="/campgrounds/<%= camp._id %>"
                        >More Info</a
                    >
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<%- include('../partials/footer.ejs') %>
